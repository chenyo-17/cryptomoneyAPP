<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/qrgenerate"-->
<!--        android:text="QR generator"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_margin="10dp"-->
<!--        android:textSize="25sp" >-->
<!--    </Button>-->

    <Button
        android:id="@+id/nfctag"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="NFC"
        android:textSize="25sp" />


<!--    <Button-->
<!--        android:id="@+id/print"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:text="print"-->
<!--        android:textSize="30sp"></Button>-->

    <Button
        android:id="@+id/tr_detail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Transaction detail"
        android:textSize="25sp"></Button>

    <Button
        android:id="@+id/crypto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="crypto transfer"
        android:textSize="25sp"></Button>

    <Button
        android:id="@+id/cryptotr_detail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="crypto transaction detail"
        android:textSize="25sp"></Button>


</LinearLayout>
